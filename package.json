{
  "name": "flowbox-telegram-shop",
  "version": "1.0.0",
  "description": "Telegram MiniApp магазин цветов FlowBox",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "nodemon bot.js",
    "build": "cd admin && npm install && npm run build",
    "build:admin": "cd admin && npm install && npx vite build && cd .. && echo '✅ Админ-панель собрана успешно'",
    "postinstall": "cd admin && npm install",
    "tunnel": "npx localtunnel --port 3000",
    "tunnel:ngrok": "npx ngrok http 3000",
    "get-url": "node get-ngrok-url.js"
  },
  "keywords": [
    "telegram",
    "miniapp",
    "shop",
    "flowers"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "telegraf": "^4.15.6",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "localtunnel": "^2.0.2",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.0.2"
  }
}
